<%= form_for @sms_service_account, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :login, value: 'Логин*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :login, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @sms_service_account, field_name: :login %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, value: 'Пароль*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.password_field :password, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @sms_service_account, field_name: :password %>
      </div>
    </div>
    <%= f.fields_for :senders do |sender| %>
        <div class="form-group">
          <%= sender.label :name, value: 'Имя отправителя*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
          <div class="col-md-6 col-sm-6 col-xs-12">
            <%= sender.text_field :name, class: 'form-control' %>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-3 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>

<% end %>