<h1>Все учетные записи</h1>
<p><%= link_to 'Новая учетная запись', new_sms_service_account_path, class: 'btn btn-primary margin-bottom' %></p>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">Логин</th>
    <th class="col-sm-2">Пароль</th>
    <th class="col-sm-2">Отправители</th>
    <th class="col-sm-3">Действия</th>
  </tr>
  <% @sms_service_accounts.each do |account| %>
      <tr>
        <td><%= link_to account.login, sms_service_account_path(account) %></td>
        <td><%= account.password %></td>
        <td>
          <% account.senders.each do |sender| %>
              <p><%= sender.name %></p>
          <% end %>
        </td>
        <td>
          <%= link_to 'Редактировать', edit_sms_service_account_path(account), class: 'btn btn-success btn-xs' %>
          <%= link_to 'Удалить', sms_service_account_path(account), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить данную учетную запись?'}, class: 'btn btn-danger btn-xs'  %>
        </td>
      </tr>
  <% end %>
</table>

<h1>Все отправители</h1>
<p><%= link_to 'Новый отправитель', new_sender_path, class: 'btn btn-primary margin-bottom' %></p>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">Имя</th>
    <th class="col-sm-3">Логин</th>
    <th class="col-sm-3">Действия</th>
  </tr>
  <% @senders.each do |sender| %>
      <tr>
        <td><%= sender.name %></td>
        <td><%= sender.sms_service_account.login %></td>
        <td>
          <%= link_to 'Редактировать', edit_sender_path(sender), class: 'btn btn-success btn-xs' %>
          <%= link_to 'Удалить', sender_path(sender), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить данного отправителя?'}, class: 'btn btn-danger btn-xs'  %>
        </td>
      </tr>
  <% end %>
</table>