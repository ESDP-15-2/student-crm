<%= form_for @sms_delivery, class: 'form-horizontal' do |f| %>

    <div class="form-group col-sm-12">
      <%= f.label :contact_list, value: 'Список рассылки', class: 'col-sm-2 control-label'  %>
      <div class="col-sm-8">
        <%= f.collection_select :contact_list_id,  ContactList.all, :id, :title, {}, autofocus: true,  class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label :title, value: 'Название', class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        <%= render 'field_errors', object: @sms_delivery, field_name: :title %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label :author, value: 'Автор', class: 'col-sm-2 control-label' %>

      <div class="col-sm-8">
        <%= f.text_field :author, autofocus: true, class: 'form-control' %>
        <%= render 'field_errors', object: @sms_delivery, field_name: :author %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label :content, value: 'Сообщение', class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.text_area :content, autofocus: true, class: 'form-control' %>
        <%= render 'field_errors', object: @sms_delivery, field_name: :content %>
      </div>
    </div>


    <div class="form-group col-sm-12">
      <div class="col-sm-offset-2 col-sm-8">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        <h5><%= link_to 'Все сообщения', sms_deliveries_path %></h5>
      </div>
    </div>

<% end %>