<h1>Все сообщения <%= link_to 'Новое сообщение', new_sms_delivery_path, class: 'btn btn-primary' %></h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Заголовок</th>
    <th>Список получателей</th>
    <th>Автор</th>
    <th>Сообщение</th>
    <th>Действия</th>
  </tr>
  <% @sms_deliveries.each do |sms| %>
      <tr>
        <td><%= sms.contact_list.title %></td>
        <td><%= sms.title %></td>
        <td><%= sms.author %></td>
        <td><%= sms.content %></td>
        <td>
          <%= link_to 'Просмотреть', sms_delivery_path(sms) %>
          <%= link_to 'Редактировать', edit_sms_delivery_path(sms) %>
          <%= link_to 'Удалить', sms_delivery_path(sms), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить это сообщение?'}  %>
        </td>
      </tr>
  <% end %>
</table>