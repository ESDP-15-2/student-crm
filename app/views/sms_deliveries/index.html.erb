<h1>Все сообщения <%= link_to 'Новое сообщение', new_sms_delivery_path, class: 'btn btn-primary' %></h1>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">Заголовок</th>
    <th class="col-sm-2">Список получателей</th>
    <th class="col-sm-2">Автор</th>
    <th class="col-sm-2">Сообщение</th>
    <th class="col-sm-3">Действия</th>
  </tr>
  <% @sms_deliveries.each do |sms| %>
      <tr>
        <td><%= sms.contact_list.title %></td>
        <td><%= sms.title %></td>
        <td><%= sms.author %></td>
        <td><%= sms.content %></td>
        <td>
          <!--<%= link_to 'Просмотреть', sms_delivery_path(sms), class: 'btn btn-default btn-xs' %>-->
          <%= link_to 'Редактировать', edit_sms_delivery_path(sms), class: 'btn btn-success btn-xs' %>
          <%= link_to 'Удалить', sms_delivery_path(sms), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить это сообщение?'}, class: 'btn btn-danger btn-xs'  %>
        </td>
      </tr>
  <% end %>
</table>