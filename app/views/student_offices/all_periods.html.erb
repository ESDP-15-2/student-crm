<div>
  <% @periods.each do |period| %>
      <%= period.title %>

      <%= link_to '<i class="fa fa-pencil-square-o fa-lg"></i>'.html_safe, create_hw_with_period_path(period),
                  class: 'btn btn-default btn-xs' %>
  <% end %>
</div>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">Название ДЗ</th>
    <th class="col-sm-2">Рецензия</th>
    <th class="col-sm-2">Оценка</th>
  </tr>
  <div class="row">
  </div>
  <% unless @user_hws.nil? %>
      <% @user_hws.each do |homework| %>
          <tr>
            <td><%= link_to homework.hw_archive_file_name, homework_path(homework) %></td>
            <td><%= homework.review %></td>
            <td><%= homework.rating %></td>
          </tr>
      <% end %>
  <% end %>
</table>

</div>
