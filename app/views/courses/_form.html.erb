<%= form_for @course, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :name, 'Название*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors',
                   object: @course,
                   field_name: :name %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :starts_at, 'Начинается*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.date_select :starts_at, class: 'form-control' %>
        <%= render 'shared/field_errors',
                   object: @course,
                   field_name: :starts_at %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :ends_at, 'Заканчивается*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-6">
        <%= f.date_select :ends_at, class: 'form-control' %>
        <%= render 'shared/field_errors',
                   object: @course,
                   field_name: :ends_at %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-6">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>