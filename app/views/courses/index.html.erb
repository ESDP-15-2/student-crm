<% provide :page_title, 'Курсы' %>

<p class="mg-bottom-20">
  <%= link_to 'Создать курс', new_course_path, class: 'btn btn-success' %>
</p>
<table class="table table-hover">
  <thead>
  <tr>
    <th class="col-md-3 col-sm-3">Название</th>
    <th class="col-md-3 col-sm-3">Дата начала</th>
    <th class="col-md-3 col-sm-3">Дата окончания</th>
    <th class="col-md-3 col-sm-3">Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.name, course_path(course) %></td>
        <td><%= course.starts_at %></td>
        <td><%= course.ends_at %></td>
        <td>
          <%= link_to '<i class="fa fa-edit fa-lg"></i>'.html_safe, edit_course_path(course),
                      class: 'btn btn-default btn-xs' %>
          <%= link_to '<i class="fa fa-remove fa-lg"></i>'.html_safe, course_path(course), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить данное занятие?'},
                      class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <%= will_paginate @courses %>
  </div>
</div>
