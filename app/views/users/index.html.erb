<% provide :page_title, 'Пользователи' %>

<p class="mg-bottom-20">
  <%= link_to 'Добавить пользователя', new_user_path, class: 'btn btn-success' %>
  <%= link_to 'Студенты', students_path, class: 'btn btn-success' %>
</p>
<table class="table table-hover">
  <thead>
  <tr>
    <th>Пользователь</th>
    <th>Статус</th>
    <th>Действия</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td><%= user.roles.map { |role| role.name }.join(', ') %></td>
        <td>
          <%= link_to '<i class="fa fa-pencil-square-o fa-lg"></i>'.html_safe, edit_user_path(user),
                      class: 'btn btn-default btn-xs' %>
          <%= link_to '<i class="fa fa-remove fa-lg"></i>'.html_safe, user_path(user),
                      method: :delete, data: {confirm: 'Вы действительно хотите удалить данного пользователя?'},
                      class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <%= will_paginate @users %>
  </div>
</div>


