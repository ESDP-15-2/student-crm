<p><%= link_to 'Добавить пользователя', new_user_path, class: 'btn btn-primary margin-bottom' %></p>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th>Пользователь</th>
    <th>Статус</th>
    <th>Действия</th>
  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td>
          <% user.roles.each do |role| %>
              <p><%= role.name %></p>
          <% end %>
        </td>
        <td>
          <%= link_to 'Редактировать', edit_user_path(user), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Удалить', user_path(user), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить данного пользователя?'}, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
  <% end %>
</table>
<div class="row">
  <div class="col-sm-12">
    <%= will_paginate @users %>
  </div>
</div>
