<%= form_for @sender, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :login, value: 'Логин*', class: 'col-md-3 col-sm-3 col-xs-12 control-label'  %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select :sms_service_account_id, SmsServiceAccount.all.order(login: :asc), :id, :login, {},
                                autofocus: true, class: 'form-control'  %>
        <%= render 'shared/field_errors', object: @sender, field_name: :login %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name,  value: 'Имя отправителя*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @sender, field_name: :name %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>