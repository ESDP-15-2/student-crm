<!DOCTYPE html>
<html>
<head>
  <title>StudentCrm</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <%= render 'layouts/navbar' %>
    <div class="container">
      <% if user_signed_in? %>
      <div id="page-wrapper">
        <div class="row">
          <div class="col-lg-12">
            <%= flash_messages %>
            <h4>
	          <ol class="breadcrumb">
                <%= render_breadcrumbs :tag => :li, :separator => '' %>
              </ol>
            </h4>
            <%= yield %>
          </div>
        </div>
      </div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
  </div>
</body>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</html>
