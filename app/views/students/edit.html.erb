<h1>Редактирование данных студента</h1>

<%= form_for @student, class: 'form-horizontal' do |f| %>

    <div class="form-group col-sm-12">
      <%= f.label 'ФИО', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @student, field_name: :name %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label 'Номер телефона', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :phone, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @student, field_name: :phone %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label 'E-mail', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.email_field :email, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @student, field_name: :email %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        <h5><%= link_to 'Назад', contact_lists_url %></h5>
      </div>
    </div>
<% end %>