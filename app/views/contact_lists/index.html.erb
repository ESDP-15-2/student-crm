<h1>Все списки <%= link_to 'Новый список рассылки', new_contact_list_path, class: 'btn btn-primary' %></h1>

<table class="table table-striped table-hover">
  <tr>
    <th>Название</th>
    <th>Действия</th>
  </tr>
  <% @contact_lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td>
          <%= link_to 'Просмотреть', contact_list_path(list) %>
          <%= link_to 'Редактировать', edit_contact_list_path(list) %>
          <%= link_to 'Удалить', contact_list_path(list), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить этот список получателей?'}  %>
        </td>
      </tr>
  <% end %>
</table>
