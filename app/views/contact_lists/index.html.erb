<h1>Все листы получателей</h1>
<p><%= link_to 'Новый лист получателей', new_contact_list_path, class: 'btn btn-primary margin-bottom' %></p>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-6">Название</th>
    <th class="col-sm-6">Действия</th>
  </tr>
  <% @contact_lists.each do |list| %>
      <tr>
        <td><%= link_to list.title, contact_list_path(list) %></td>
        <td>
          <%= link_to 'Редактировать', edit_contact_list_path(list), class: 'btn btn-success btn-xs' %>
          <%= link_to 'Удалить', contact_list_path(list), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить этот лист получателей?'}, class: 'btn btn-danger btn-xs'  %>
        </td>
      </tr>
  <% end %>
</table>
