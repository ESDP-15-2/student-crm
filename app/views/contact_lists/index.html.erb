<h1>Все списки
  <%= link_to 'Новый список получателей', new_contact_list_path, class: 'btn btn-primary' %>
  <%= link_to 'Новое сообщение', new_sms_delivery_path, class: 'btn btn-primary' %>
</h1>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-6">Название</th>
    <th class="col-sm-6">Действия</th>
  </tr>
  <% @contact_lists.each do |list| %>
      <tr>
        <td><%= list.title %></td>
        <td>
          <%= link_to 'Просмотреть', contact_list_path(list), class: 'btn btn-default btn-xs' %>
          <%= link_to 'Редактировать', edit_contact_list_path(list), class: 'btn btn-success btn-xs' %>
          <%= link_to 'Удалить', contact_list_path(list), method: :delete,
                      data: {confirm: 'Вы действительно хотите удалить этот список получателей?'}, class: 'btn btn-danger btn-xs'  %>
        </td>
      </tr>
  <% end %>
</table>
