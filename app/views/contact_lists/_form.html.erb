<%= form_for @contact_list, class: 'form-horizontal' do |f| %>

    <div class="form-group col-sm-12">
      <%= f.label 'Название', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @contact_list, field_name: :title %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label 'Курс', class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.collection_select(:students, Course.all, :id, :name, {:include_blank => "Выберите курс"}, {:id=>'select-course-id'}) %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label 'Группа', class: 'col-sm-2 control-label' %>
      <div class="col-sm-8">
        <%= f.collection_select(:students, [], :id, :name,  {:include_blank => "Выберите группу"}, {:id=>'select-group-id'}) %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label 'Контакты', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <ul class="checkbox" id="student-list">
          <li>Нет данных для отображения</li>
        </ul>
        <%= render 'shared/field_errors', object: @contact_list, field_name: :students %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        <h5><%= link_to 'Все листы получателей', contact_lists_path %></h5>
      </div>
    </div>
<% end %>