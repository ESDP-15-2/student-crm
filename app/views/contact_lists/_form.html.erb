<%= form_for @contact_list, class: 'form-horizontal' do |f| %>

    <div class="form-group col-sm-12">
      <%= f.label 'Название', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        <%= render 'field_errors', object: @contact_list, field_name: :title %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label 'Контакты', class: 'col-sm-2 control-label' %>
      <div class="col-sm-6">
        <%= f.collection_check_boxes(:student_ids, Student.all, :id, :name) do |student| %>
            <ul class="checkbox">
              <li>
                <%= student.check_box %>
                <%= student.label %><br/>
              </li>
            </ul>
        <% end %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
        <h5><%= link_to 'Все списки получателей', contact_lists_path %></h5>
      </div>
    </div>
<% end %>