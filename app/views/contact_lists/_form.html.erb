<%= form_for @contact_list, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label 'Название*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :title, autofocus: true, class: 'form-control' %>
