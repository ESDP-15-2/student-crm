<h1>Список "<%= @contact_list.title %>"</h1>

<table class="table table-striped table">
  <tr>
    <th>ФИО</th>
    <th>Курс</th>
    <th>Номер телефона</th>
    <th>E-mail</th>
    <th>Действия</th>
  </tr>
  <% @contact_list.students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td>
        <% student.groups.each do |group| %>
          <p><%= group.course.name %> <%= group.name %></p>
        <% end %>
      </td>
      <td><%= student.phone %></td>
      <td><%= student.email %></td>
      <td>
        <%= link_to 'Редактировать', edit_student_path(student) %>
        <%= link_to 'Удалить', student_path(student), method: :delete,
                    data: {confirm: 'Вы действительно хотите удалить данные студента?'} %>
      </td>
    </tr>
  <% end %>
</table>

<h5><%= link_to 'Назад', contact_lists_path %></h5>