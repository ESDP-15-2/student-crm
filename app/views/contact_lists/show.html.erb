<h5><%= link_to 'Назад', contact_lists_path %></h5>
<h1>Просмотр листа получателей "<%= @contact_list.title %>"</h1>

<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">ФИО</th>
    <th class="col-sm-2">Курс</th>
    <th class="col-sm-2">Номер телефона</th>
    <th class="col-sm-2">Действия</th>
  </tr>
  <% @contact_list.students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td>
        <% student.groups.each do |group| %>
          <p><%= group.course.name %> <%= group.name %></p>
        <% end %>
      </td>
      <td><%= student.phone %></td>
      <td>
        <%= link_to 'Редактировать', edit_student_path(student), class: 'btn btn-success btn-xs' %>
        <%= link_to 'Удалить', student_path(student), method: :delete,
                    data: {confirm: 'Вы действительно хотите удалить данные студента?'}, class: 'btn btn-danger btn-xs' %>
      </td>
    </tr>
  <% end %>
</table>

