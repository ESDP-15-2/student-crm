<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">ФИО</th>
    <th class="col-sm-2">Курс</th>
    <th class="col-sm-2">Номер телефона</th>
    <th class="col-sm-2">Действия</th>
  </tr>
  <% @contact_list.users.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td>
				<% student.groups.each do |group| %>
          <p><%= group.course.name %> <%= group.name %></p>
        <% end %>
      </td>
      <td><%= student.contact.phone %></td>
      <td>
        <%= link_to 'Редактировать', edit_user_path(student), class: 'btn btn-success btn-xs' %>
        <%= link_to 'Удалить', user_path(student), method: :delete,
                    data: {confirm: 'Вы действительно хотите удалить данные студента?'}, class: 'btn btn-danger btn-xs' %>
      </td>
    </tr>
  <% end %>
</table>

