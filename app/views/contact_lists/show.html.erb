<% provide :page_title, 'Просмотр листа получателей - ' + @contact_list.title %>

<div class="col-md-6 col-sm-6 col-xs-12">
  <table class="table table-hover">
    <% @contact_list.users.each do |student| %>
        <tr>
          <td class="col-sm-3"><%= student.name %></td>
          <td class="col-sm-2"><%= student.contact.phone %>
          </td>
        </tr>
    <% end %>
  </table>
  <p>
    <%= link_to 'Создать рассылку', sms_new_from_contact_list_path(@contact_list),
                class: 'btn btn-default' %>
    <%= link_to 'Редактировать', edit_contact_list_path(@contact_list),
                class: 'btn btn-default' %>
    <%= link_to 'Удалить', contact_list_path(@contact_list),
                method: :delete, data: {confirm: 'Вы действительно хотите удалить этот лист получателей?'},
                class: 'btn btn-danger' %>
  </p>
</div>
