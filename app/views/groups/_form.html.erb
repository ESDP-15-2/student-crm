<%= form_for @group, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :name, value: 'Имя*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @group, field_name: :name %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :login, value: 'Курс*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select :course_id, Course.all.order(created_at: :desc), :id, :name, {}, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>

<% end %>