<%= form_for @course_element, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :course, value: 'Курс*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select :course_id, Course.all.order(created_at: :desc), :id, :name, {},
                                autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course_element, field_name: :course %>
      </div>

    </div>

    <div class="form-group">
      <%= f.label :theme, 'Тема*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_field :theme, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors',
                   object: @course_element,
                   field_name: :theme %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>