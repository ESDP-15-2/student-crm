<%= form_for @homework do |f| %>

    <div class="form-group col-sm-12">
      <%= f.label :review, value: 'Рецензия *', class: 'col-sm-3 control-label' %>
      <div class="col-sm-6">
        <%= f.text_area :review, rows: 10, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @homework, field_name: :review %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <%= f.label :rating, value: 'Оценка*', class: 'col-sm-3 control-label' %>
      <div class="col-sm-6">
        <%= f.number_field :rating, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @homework, field_name: :rating %>
      </div>
    </div>

    <div class="form-group col-sm-12">
      <div class="col-sm-offset-3 col-sm-6">
        <%= f.submit 'Сохранить', class: 'btn btn-default' %>
      </div>
    </div>
<% end %>