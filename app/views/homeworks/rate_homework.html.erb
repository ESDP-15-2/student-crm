<% provide :page_title, '' %>

<%= form_for @homework, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :review, value: 'Рецензия*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.text_area :review, rows: 10, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @homework, field_name: :review %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :rating, value: 'Оценка*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.number_field :rating, autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @homework, field_name: :rating %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Сохранить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>