<%= form_for @homework, html: {class: 'form-horizontal'} do |f| %>

    <div class="form-group">
      <%= f.label :period, value: 'Выберите занятие*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.collection_select :period_id, Period.all.order(created_at: :desc), :id, :title, {},
                                autofocus: true, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @homework, field_name: :period %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :hw_archive, value: 'Загрузите архив*', class: 'col-md-3 col-sm-3 col-xs-12 control-label' %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= f.file_field :hw_archive, autofocus: true, class: 'bootstrap-class' %>
        <%= render 'shared/field_errors', object: @homework, field_name: :hw_archive %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-12 col-md-6 col-sm-6 col-xs-12">
        <%= f.submit 'Отправить', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>